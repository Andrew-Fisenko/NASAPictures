<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NASAPictures" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--item name="chipStyle">@style/MyChipStyle</item-->
        <item name="textInputStyle">@style/MyTextInputLayoutStyle</item>
        <!--   <item name="android:navigationBarColor">@android:color/transparent</item>
           <item name="android:statusBarColor">@android:color/transparent</item>
           <item name="android:windowLightStatusBar">?attr/isLightTheme</item>-->
    </style>


    <style name="MyChipStyleViolet" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@drawable/my_selector_backgroundchip</item>
        <item name="rippleColor">#2E8B57</item>
        <item name="android:textAppearance">@style/chipTextAppearanceViolet</item>
    </style>

    <style name="chipTextAppearanceViolet" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/splash_regular</item>
    </style>

    <style name="MyChipStyleAqua" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@drawable/my_selector_backgroundchip</item>
        <item name="rippleColor">#2E8B57</item>
        <item name="android:textAppearance">@style/chipTextAppearanceAqua</item>
    </style>

    <style name="chipTextAppearanceAqua" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/aclonica</item>
    </style>

    <style name="MyChipStyleWalkman" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@drawable/my_selector_backgroundchip</item>
        <item name="rippleColor">#2E8B57</item>
        <item name="android:textAppearance">@style/chipTextAppearanceWalkman</item>
    </style>

    <style name="chipTextAppearanceWalkman" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/arima_variable_font_wght</item>
    </style>



    <style name="MyTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">#FF6347</item>
        <item name="counterTextColor">@drawable/my_selector_backgroundchip</item>
    </style>

    <!--style name="Theme.NASAPictures" parent="Base.Theme.NASAPictures" /-->

    <style name="ThemeViolet" parent="Base.Theme.NASAPictures">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>

        <item name="fontFamily">@font/splash_regular</item>
        <item name="android:fontFamily">@font/splash_regular</item>

        <item name="chipStyle">@style/MyChipStyleViolet</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>

    <style name="ThemeAqua" parent="Base.Theme.NASAPictures">
        <item name="colorPrimary">#00FFFF</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="fontFamily">@font/aclonica</item>
        <item name="android:fontFamily">@font/aclonica</item>

        <item name="chipStyle">@style/MyChipStyleAqua</item>


        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
    </style>

    <style name="ThemeWalkman" parent="Base.Theme.NASAPictures" >
        <item name="colorPrimary">#FF6347</item>
        <item name="colorPrimaryVariant">#FF4500</item>

        <item name="fontFamily">@font/arima_variable_font_wght</item>
        <item name="android:fontFamily">@font/arima_variable_font_wght</item>

        <item name="chipStyle">@style/MyChipStyleWalkman</item>

        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">#FFFFFF</item>
    </style>
</resources>